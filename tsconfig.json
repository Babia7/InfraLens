{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vitest"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@layout/*": [
        "./components/layout/*"
      ],
      "@apps/*": [
        "./components/apps/*"
      ],
      "@design/*": [
        "./design/*"
      ],
      "@data/*": [
        "./data/*"
      ],
      "@services/*": [
        "./services/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
